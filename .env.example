# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/talabalar?schema=public"
DIRECT_URL="postgresql://user:password@localhost:5432/talabalar?schema=public"

# JWT Authentication
JWT_SECRET=your_jwt_secret_here_change_this_in_production
JWT_EXPIRES_IN=7d

# Super Admin (Initial Setup)
SUPER_ADMIN_USERNAME=admin
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_PASSWORD=Admin@123456

# Swagger Authentication
SWAGGER_USERNAME=swagger
SWAGGER_PASSWORD=swagger123

# Backup & Monitoring
BACKUP_DIR=./backups
ENABLE_METRICS=false

# File Upload
UPLOAD_DIR=./uploads/profiles

# Email Configuration (Optional - Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# SMS Configuration (Optional - for future real SMS integration)
SMS_PROVIDER=demo
SMS_API_KEY=
SMS_API_SECRET=
SMS_FROM=
