generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id              String   @id @default(uuid())
  full_name       String
  faculty         String
  group           String
  email           String?  @unique
  phone           String?
  birth_date      DateTime
  enrollment_year Int
  status          Status   @default(active)
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
}

enum Status {
  active
  graduated
  expelled
  academic_leave
}
